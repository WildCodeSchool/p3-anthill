FROM node:16.14

WORKDIR /usr/src/app

ARG DB_HOST=${DB_HOST}
ENV DB_HOST=${DB_HOST}
ARG DB_USER=${DB_USER}
ENV DB_USER=${DB_USER}
ARG DB_PASSWORD=${DB_PASSWORD}
ENV DB_PASSWORD=${DB_PASSWORD}
ARG DB_NAME=${DB_NAME}
ENV DB_NAME=${DB_NAME}
ARG APP_PORT=${APP_PORT}
ENV APP_PORT=${APP_PORT}
ARG JWT_SECRET=${JWT_SECRET}
ENV JWT_SECRET=${JWT_SECRET}
ARG SLACK_WORKING_PLACE_ID=${SLACK_WORKING_PLACE_ID}
ENV SLACK_WORKING_PLACE_ID=${SLACK_WORKING_PLACE_ID}
ARG SLACK_API_BOT_USER_TOKEN=${SLACK_API_BOT_USER_TOKEN}
ENV SLACK_API_BOT_USER_TOKEN=${SLACK_API_BOT_USER_TOKEN}

COPY ./backend .

RUN npm install

CMD [ "npm", "start" ]